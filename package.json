{
  "name": "form-builder",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm run clean:build && pnpm build:types && pnpm build:parama-ui && pnpm build:core && pnpm build:renderer && pnpm build:editor",
    "build:types": "pnpm --filter @parama-dev/form-builder-types bundle",
    "build:core": "pnpm --filter @parama-dev/form-builder-core build",
    "build:renderer": "pnpm --filter @parama-dev/form-builder-renderer build",
    "build:editor": "pnpm --filter @parama-dev/form-builder-editor build",
    "build:parama-ui": "pnpm --filter @parama-ui/react build",
    "build:packages": "pnpm build:types && pnpm build:parama-ui && pnpm build:core && pnpm build:renderer && pnpm build:editor",
    "publish:types": "pnpm --filter @parama-dev/form-builder-types publish --access public --no-git-checks --report-summary",
    "publish:core": "pnpm --filter @parama-dev/form-builder-core publish --access public --no-git-checks --report-summary",
    "publish:renderer": "pnpm --filter @parama-dev/form-builder-renderer publish --access public --no-git-checks --report-summary",
    "publish:editor": "pnpm --filter @parama-dev/form-builder-editor publish --access public --no-git-checks --report-summary",
    "publish:parama-ui": "pnpm --filter @parama-ui/react publish --access public --no-git-checks --report-summary",
    "publish:types:dry": "pnpm --filter @parama-dev/form-builder-types publish --dry-run --access public --no-git-checks",
    "publish:core:dry": "pnpm --filter @parama-dev/form-builder-core publish --dry-run --access public --no-git-checks",
    "publish:renderer:dry": "pnpm --filter @parama-dev/form-builder-renderer publish --dry-run --access public --no-git-checks",
    "publish:editor:dry": "pnpm --filter @parama-dev/form-builder-editor publish --dry-run --access public --no-git-checks",
    "publish:parama-ui:dry": "pnpm --filter @parama-ui/react publish --dry-run --access public --no-git-checks",
    "version:patch": "pnpm -r --filter='packages/*' exec npm version patch",
    "version:minor": "pnpm -r --filter='packages/*' exec npm version minor",
    "version:major": "pnpm -r --filter='packages/*' exec npm version major",
    "deps:prepare": "node manage-deps.js prepare",
    "deps:revert": "node manage-deps.js revert",
    "deps:status": "node manage-deps.js status",
    "publish:prepare": "pnpm deps:prepare && pnpm build",
    "publish:complete": "pnpm publish:types && pnpm publish:core && pnpm publish:renderer && pnpm publish:editor && pnpm deps:revert",
    "editor": "pnpm dev --filter @parama-dev/form-builder-editor",
    "parama-ui": "pnpm dev --filter @parama-ui/react",
    "demo": "pnpm dev --filter @parama-dev/demo",
    "demo:prepublish": "pnpm dev --filter @parama-dev/demo-production",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean:deps": "turbo run clean && rimraf node_modules .vite",
    "clean:build": "pnpm -r exec rimraf dist node_modules/.cache",
    "clean:types": "pnpm --filter @parama-dev/form-builder-types clean",
    "clean:core": "pnpm --filter @parama-dev/form-builder-core clean",
    "clean:renderer": "pnpm --filter @parama-dev/form-builder-renderer clean",
    "clean:editor": "pnpm --filter @parama-dev/form-builder-editor clean",
    "clean:parama-ui": "pnpm --filter @parama-ui/react clean",
    "prepare": "husky install",
    "format": "prettier --write ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "eslint": "^9.26.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "turbo": "^2.5.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.32.1"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.17"
  }
}

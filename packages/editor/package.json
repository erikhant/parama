{
  "name": "@parama-dev/form-builder-editor",
  "version": "0.2.4",
  "description": "Visual form builder editor with drag-and-drop interface",
  "private": false,
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./styles": {
      "import": "./dist/styles.css",
      "require": "./dist/styles.css"
    },
    "./dist/styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite dev --port 5000",
    "build": "cross-env NODE_ENV=production pnpm run build:lib",
    "build:lib": "tsc && vite build",
    "preview": "vite preview",
    "clean": "rimraf dist node_modules",
    "lint": "eslint ."
  },
  "dependencies": {
    "@dnd-kit/core": "latest",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@parama-dev/form-builder-core": "workspace:*",
    "@parama-dev/form-builder-renderer": "workspace:*",
    "@parama-dev/form-builder-types": "workspace:*",
    "@monaco-editor/react": "4.7.0",
    "@parama-ui/react": "workspace:*",
    "framer-motion": "^12.12.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.510.0",
    "postcss": "8.5.3",
    "react-error-boundary": "^6.0.0",
    "sonner": "^2.0.6",
    "uuid": "^11.1.0",
    "vite-plugin-dts": "^4.5.4",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.18",
    "@types/react": "^18.3.21",
    "@types/react-dom": "^18.3.7",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.29.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "use-debounce": "^10.0.4",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "@parama-dev/form-builder-core": "workspace:*",
    "@parama-dev/form-builder-types": "workspace:*",
    "@parama-dev/form-builder-renderer": "workspace:*",
    "@parama-ui/react": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "3.4.17",
    "ajv": "^8.17.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "ajv": {
      "optional": false
    }
  }
}

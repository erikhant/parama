{
  "name": "@parama-ui/react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "A reusable UI component library built with React, TailwindCSS and Radix UI.",
  "types": "dist/index.d.ts",
  "keywords": [
    "react",
    "ui",
    "components",
    "tailwindcss",
    "ui-library",
    "component-library",
    "radix-ui"
  ],
  "author": "Parama Team",
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "style": "dist/parama-ui.min.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "scripts": {
    "dev": "vite && NODE_ENV=development",
    "build": "vite build && npx tailwindcss -i src/styles/prod.css -o dist/parama-ui.min.css --minify",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rimraf dist node_modules",
    "type-check": "tsc --noEmit",
    "add:component": "pnpm dlx shadcn@2.3.0 add"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.510.0",
    "react": "18.2.0",
    "react-day-picker": "^9.7.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "1.0.7",
    "vite-plugin-dts": "^4.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^22.16.4",
    "@types/react": "18.3.21",
    "@types/react-dom": "18.3.7",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
